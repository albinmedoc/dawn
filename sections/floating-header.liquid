@-webkit-keyframes FadeFloat {
  0%,
  100% {
    opacity: 0;
  }

  5%,
  90% {
    opacity: 1; }
}

@keyframes FadeFloat {
  0%,
  100% {
    opacity: 0;
  }

  5%,
  90% {
    opacity: 1;
  }
}

@-webkit-keyframes FadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes FadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes Bounce {
   0%, 20%, 50%, 80%, 100% {transform: translateY(0);} 
   40% {transform: translateY(-30px);} 
   60% {transform: translateY(-15px);} 
}

